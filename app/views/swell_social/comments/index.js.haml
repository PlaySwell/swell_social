
- if params[:page].nil?
	$(".comments-for.comments-for-#{(@parent || @parent_obj).class.name.underscore.gsub('/','_')}-#{(@parent || @parent_obj).id}").html("#{j render(template: 'swell_social/comments/index.html', locals: {}, layout: false)}")
- else
	$(".comments-for.comments-for-#{(@parent || @parent_obj).class.name.underscore.gsub('/','_')}-#{(@parent || @parent_obj).id} .comments-for-page-#{@comments.current_page}").replaceWith("#{j render(partial: 'swell_social/comments/paged.html.haml', locals: { comments: @comments, args: {} })}")